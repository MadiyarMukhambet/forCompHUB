<%- include('../partials/header', { title: 'Admin Panel' }) %>
<%- include('../partials/adminStyles') %>

<main>
  <h2>Admin Panel</h2>
  
  <!-- Навигация по разделам админпанели -->
  <nav class="admin-nav">
    <ul>
      <li><a href="/admin/users">Manage Users</a></li>
      <li><a href="/admin/products?category=monitors">Manage Products</a></li>
    </ul>
  </nav>
  
  <!-- Раздел пользователей -->
  <section class="admin-users">
    <h3>Users</h3>
    <a href="/admin/users/create" class="btn">Create New User</a>
    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td>
              <a href="/admin/users/<%= user._id %>/edit">Edit</a>
              <a href="/admin/users/<%= user._id %>/delete">Delete</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </section>
</main>

<%- include('../partials/footer') %>
