<%- include('../partials/header', { title: 'Admin Panel - Users' }) %>

<main>
    <h2>Admin Panel - Users</h2>

    <a href="/admin/users/create">Create New User</a>

    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                    <td>
                        <a href="/admin/users/<%= user._id %>/edit">Edit</a>
                        <a href="/admin/users/<%= user._id %>/delete">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</main>

<%- include('../partials/footer') %>